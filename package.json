{
  "name": "raster-catalog-manager",
  "version": "1.4.0",
  "description": "Service for inserting records into raster-catalog-manager",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix && npm run generate-record-entity",
    "prelint": "npm run format && npm run generate-record-entity",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "release": "standard-version",
    "pretest": "npm run generate-record-entity",
    "test": "npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean && npm run generate-record-entity",
    "build": "tsc --project tsconfig.build.json && npm run bundleOpenApi && npm run assets:copy",
    "start": "npm run build && cd dist && node ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./bundledApi.yaml ./dist/ && copyfiles ./package.json dist",
    "copySchema": "copyfiles -u 5 \"./node_modules/@map-colonies/mc-model-types/Schema/yaml/**/*\" ./Schema",
    "clean": "rimraf dist src/DAL/entity/generated.ts bundledApi.yaml",
    "generate-record-entity": "code-generator -p raster -gt orm -tf src/DAL/entity/generated.ts",
    "pretest:integration": "npm run bundleOpenApi",
    "bundleOpenApi": "openapi bundle --output ./bundledApi.yaml --ext yaml ./openapi3.yaml",
    "prebundleOpenApi": "npm run copySchema",
    "postbundleOpenApi": "rimraf Schema"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@map-colonies/error-express-handler": "^1.2.0",
    "@map-colonies/eslint-config": "^2.2.0",
    "@map-colonies/mc-logger": "^2.0.2",
    "@map-colonies/mc-model-types": "^10.0.2",
    "@map-colonies/mc-probe": "^1.0.0",
    "@map-colonies/prettier-config": "0.0.1",
    "@turf/bbox": "^6.3.0",
    "@types/geojson": "^7946.0.7",
    "config": "^3.3.6",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.12.11",
    "http-status-codes": "^2.1.4",
    "js-yaml": "^3.14.1",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "tsyringe": "^4.5.0",
    "typeorm": "^0.2.30",
    "wellknown": "^0.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@map-colonies/code-generator": "^1.2.1",
    "@map-colonies/eslint-config": "^2.1.0",
    "@map-colonies/standard-version-update-openapi3-version": "^0.0.2",
    "@redocly/openapi-cli": "^1.0.0-beta.25",
    "@types/config": "^0.0.38",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^3.12.5",
    "@types/multer": "^1.4.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/wellknown": "^0.5.1",
    "@types/yamljs": "^0.2.31",
    "commitlint": "^9.1.2",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.0.1",
    "eslint": "^7.27.0",
    "husky": "^4.2.5",
    "jest": "^27.2.5",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.1.6",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3"
  }
}
