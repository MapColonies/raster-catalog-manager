{
  "openapiConfig": {
    "filePath": "./bundledApi.yaml",
    "basePath": "/docs",
    "jsonPath": "/api.json",
    "uiPath": "/api"
  },
  "logger": {
    "level": "info"
  },
  "server": {
    "port": "8080",
    "request": {
      "payload": {
        "limit": "10mb"
      }
    }
  },
  "typeOrm": {
    "type": "postgres",
    "host": "localhost",
    "port": 5432,
    "username": "postgres",
    "password": "postgres",
    "enableSslAuth": false,
    "sslPaths": {
      "ca": "",
      "key": "",
      "cert": ""
    },
    "database": "raster",
    "schema": "public",
    "synchronize": false,
    "logging": false,
    "entities": ["**/DAL/entity/**/*.js"],
    "migrations": ["**/DAL/migration/**/*.js", "**/DAL/migration/**/*.ts"],
    "subscribers": ["**/DAL/subscriber/**/*.js"],
    "cli": {
      "entitiesDir": "src/DAL/entity",
      "migrationsDir": "src/DAL/migration",
      "subscribersDir": "src/DAL/subscriber"
    }
  }
}
